select surf_pocket3, protein and id [259,264,266,271,273,275,277,462,463,481,482,681] 
set surface_color,  pcol3, surf_pocket3 
set_color pcol4 = [0.702,0.408,0.278]
select surf_pocket4, protein and id [91,93,96,99,128,130,141,163,165,323,326,328,345,353] 
